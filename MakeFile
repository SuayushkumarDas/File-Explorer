# Makefile - Advanced File Explorer
CXX = g++
CXXFLAGS = -Wall -Wextra -std=c++17 -O2
LDFLAGS = 
TARGET = file_explorer
SRC = file_explorer.cpp

all: $(TARGET)

$(TARGET): $(SRC)
	@echo "Compiling Advanced File Explorer..."
	$(CXX) $(CXXFLAGS) $(SRC) -o $(TARGET) $(LDFLAGS)
	@echo "Build complete."

run: all
	@echo "Running..."
	./$(TARGET)

install: $(TARGET)
	@echo "Installing to /usr/local/bin (sudo may be required)..."
	sudo cp $(TARGET) /usr/local/bin/
	@echo "Installed: /usr/local/bin/$(TARGET)"

uninstall:
	@echo "Removing /usr/local/bin/$(TARGET)..."
	sudo rm -f /usr/local/bin/$(TARGET)
	@echo "Removed."

clean:
	@echo "Cleaning build..."
	rm -f $(TARGET)
	@echo "Clean done."

.PHONY: all run install uninstall clean
